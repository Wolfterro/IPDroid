<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="io.github.wolfterro.ipdroid.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/externalIP"
                android:textAlignment="center"
                android:textColor="@color/whiteFont"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView2_ExternalIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notAvailable"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textColor="@color/whiteFont"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/internalIP"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/whiteFont"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView6_InternalIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notAvailable"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textColor="@color/whiteFont"
                android:textSize="26sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/whiteFont" />

            <TextView
                android:id="@+id/textView3_Hostname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hostname"
                android:textColor="@color/whiteFont"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView4_Loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loc"
                android:textColor="@color/whiteFont"
                android:layout_marginBottom="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView5_Org"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/org"
                android:textColor="@color/whiteFont"
                android:layout_marginBottom="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView6_City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/city"
                android:textColor="@color/whiteFont"
                android:layout_marginBottom="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView7_Region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/region"
                android:textColor="@color/whiteFont"
                android:layout_marginBottom="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView8_Country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/country"
                android:textColor="@color/whiteFont"
                android:layout_marginBottom="10dp"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/whiteFont" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundButton"
                android:text="@string/loadInformations"
                android:textColor="@color/whiteFont" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
